@{
    ViewBag.Title = "Contact Us";
}
@section scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

<section>
    <div class="col-md-12">
        <div class="whity">
            <!-- Main Content Starts Here -->
            <!-- Content should be encloased inside div with the class "posts" -->
            <div class="posts">
                <!-- Each entry should be enclosed inside div with the class "entry" -->
                <div class="entry">
                    <div class="padd">
                        <!-- Contact Page title -->
                        <h2>Contact Us</h2>
                        <!-- Contact Page Para -->
                        <p>Fusce imperdiet, risus eget viverra faucibus, diam mi vestibulum libero, ut vestibulum tellus magna nec enim. Nunc dapibus varius interdum. Phasellus at lorem ut lectus fermentum convallis.</p>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="padd">
                                <div class="co-form">
                                    <form class="form-horizontal" method="POST">
                                        <fieldset>
                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="name">Name</label>
                                                <div class="col-md-7">
                                                    <input type="text" class="form-control" id="name" placeholder="Name" name="name" data-val="true" data-val-required="*">
                                                </div>
                                                <div class="col-md-3">
                                                    <span class="field-validation-valid" data-valmsg-for="name" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="email">Email</label>
                                                <div class="col-md-7">
                                                    <input type="text" class="form-control" id="email" placeholder="Email" name="email" data-val="true" data-val-required="*" data-val-email="Not Valid">
                                                </div>
                                                <div class="col-md-3">
                                                    <span class="field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="website">Website</label>
                                                <div class="col-md-7">
                                                    <input type="text" class="form-control" id="website" placeholder="Website" name="website" data-val="true" data-val-required="*">
                                                </div>
                                                <div class="col-md-3">
                                                    <span class="field-validation-valid" data-valmsg-for="website" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="comment">Message</label>
                                                <div class="col-md-7">
                                                    <textarea class="form-control" id="comment" rows="4" placeholder="Message..." name="comment" data-val="true" data-val-required="*"></textarea>
                                                </div>
                                                <div class="col-md-3">
                                                    <span class="field-validation-valid" data-valmsg-for="comment" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-offset-3 col-md-3">
                                                    <button type="submit" class="btn btn-info">Send</button> &nbsp;
                                                    <button type="reset" class="btn btn-default">Reset</button>
                                                    @if (ViewBag.MailSent != null && ViewBag.MailSent)
                                                    {
                                                        <div>Mail Sent!</div>
                                                    }
                                                </div>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="padd">
                                <div class="caddress">
                                    <address>
                                        <strong>FinAdmin4U</strong><br>
                                        Remmerdenplein 68<br>
                                        1106 AH Amsterdam<br>
                                        <abbr title="phone">T:</abbr> (06) 1744 5983<br><br>
                                        <strong>Svetlana Noskova</strong><br>
                                        <a href="mailto:madrus@gmail.com">madrus@gmail.com</a>
                                    </address>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Google Map -->
                    <div class="gmap">
                        <div class="padd">
                            <!-- Goto Google maps and copy the embed code of your location. Replace the below embed code with your code. -->
                            <iframe height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2440.001518331683!2d4.974729199999989!3d52.29782689999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c60c87dc2e1413%3A0xa3d7456faa4d54b7!2sRemmerdenplein+68%2C+1106+AH+Amsterdam+Zuid-Oost%2C+Netherlands!5e0!3m2!1sen!2sus!4v1420914390116"></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Main Content Ends Here -->
        </div>
    </div>
</section>
}
